@model MvcProjectArch.UI.Models.LoginModel
@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/MinimizeCss/MainCss")
</head>
<body class="black">

    <div class="form-box" id="login-box">
        <div class="header">Sign In</div>
        @using (Html.BeginForm()) { 
            <div class="body bg-gray">
                <div class="form-group">
                    @Html.TextBoxFor(x=>x.UserName,new{@class="form-control",@placeholder="Kullanıcı Adı.."})
                
                </div>
                <div class="form-group">
                    @Html.PasswordFor(x=>x.Password,new{@class="form-control",@placeholder="Şifre..."})
                  
                </div>
                <div class="form-group">
                    <input type="checkbox" name="remember_me" /> Beni Hatırla
                </div>
            </div>
            <div class="footer">
                <button type="submit" class="btn bg-olive btn-block">Giriş Yap</button>

                <p><a href="/Account/Register">Hesap Oluştur</a></p>
                @if (Model.ErrorMessage != null)
                {
                    <div class="callout callout-danger">
                        <h4></h4>
                        <p>@Model.ErrorMessage</p>
                    </div>
                }
           
                    
            </div>
        }
        <div class="margin text-center">
            <span>Sign in using social networks</span>
            <br />
            <button class="btn bg-light-blue btn-circle"><i class="fa fa-facebook"></i></button>
            <button class="btn bg-aqua btn-circle"><i class="fa fa-twitter"></i></button>
            <button class="btn bg-red btn-circle"><i class="fa fa-google-plus"></i></button>
        </div>
    </div>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <!-- Bootstrap -->
    @Scripts.Render("~/Content/MinimizeJs/MainScript")
</body>
</html>
