@model List<MvcProjectArch.UI.Models.ProductManagmentHomeModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
@section header{
    <style type="text/css">
        ul{
            display:inline;
        }
        ul li{
            list-style-type:none;
        }
        ul li ul li{
            padding-left:15px;
        }
    </style>
}
<section class="content-header">
    <h1>
   Tüm Ürünler

        <small>Ürün Yönetimi</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Ürün Yönetimi</a></li>
        <li class="active">Ürün Yönetimi</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <a href="/ProductManagment/AddProduct" class="btn btn-info"><i class="fa fa-plus-square-o"></i> Yeni Ürün ekle</a>
    <ul>


        @foreach (var item in Model)
    {
            <li><span style="font-size:17px;">@item.CategoryName</span></li>
    <ul>
        @foreach (var item1 in item.ProductGroupTree)
        {

                <li style="padding-left:15px;">>>@item1.ProductBase.ProductGroupName</li>
                if (item1.ProductBase.Products.Count > 0)
                {
                    <li style="padding-left:35px;">
                        <table>
                            <tr>
                                <th>Ürün Adı</th>
                                <th>Marka Adı</th>
                                <th>Model Adı</th>
                                <th>Maliyet</th>
                                <th>Fiyat</th>
                                <th></th>
                            </tr>
                            @foreach (var item2 in item1.ProductBase.Products)
                            {
                                <tr>
                                    <td>@item2.ProductName</td>
                                    <td>@item2.BrandName</td>
                                    <td>@item2.ModelName</td>
                                    <td>@item2.ProductCost</td>
                                    <td>@item2.ProductPrice</td>
                                    <td><a href="/ProductManagment/Edit/@item2.ProductId">Düzenle</a></td>

                                </tr>

                            }
                        </table>
                    </li>
                }


        }
    </ul>

    }
    </ul>
</section>
